<launch>
  <arg name="MOVEIT" default="false" />

  <!--hardware controller-->
  <node name="aero_controller" pkg="aero_startup"
  	type="aero_controller_node" output="screen"/>

  <!--robot tfs-->
  <include file="$(find aero_startup)/aero_controller_manager/launch/controller_manager.launch"/>

  <!--  without moveit -->
  <include file="$(find aero_startup)/generated_controllers.launch" unless="$(arg MOVEIT)"/>
  <!--  with moveit -->
  <include file="$(find aero_moveit_config)/launch/generated_controllers.launch" if="$(arg MOVEIT)"/>

  <!--ps4eye sensor-->
  <include file="$(find aero_startup)/aero_sensors/launch/start_ps4eye.launch"/>
  <node pkg="topic_tools" type="throttle" name="ps4eye_throttle"
        args="messages /stereo/points2 2.0" />
</launch>
